<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup.SignupActivity">

    <TextView
        android:id="@+id/tv_signuppage_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/tv_signuppage_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textSize="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/tv_signuppage_head"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/et_signuppage_putname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/putname"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_signuppage_name"/>
    <TextView
        android:id="@+id/tv_signuppage_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/id"
        android:textSize="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/et_signuppage_putname"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/et_signuppage_putid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/putid"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_signuppage_id"/>
    <TextView
        android:id="@+id/tv_signuppage_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pw"
        android:textSize="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/et_signuppage_putid"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/et_signuppage_putpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/putpassword"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_signuppage_password"/>
    <TextView
        android:id="@+id/tv_signuppage_special"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/special"
        android:textSize="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/et_signuppage_putpassword"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/et_signuppage_putspecial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/putspecial"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_signuppage_special"/>
    <Button
        android:id="@+id/btn_signuppage_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/complete"
        android:textSize="20dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@id/et_signuppage_putspecial"
        app:layout_constraintBottom_toBottomOf="parent"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>